<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/donutsImageButton"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:background="@color/imagesBackgroundColor"
        android:onClick="goToDonutsView"
        android:scaleType="fitCenter"
        android:src="@drawable/donuts2"
        app:layout_constraintEnd_toStartOf="@+id/coffeeImageButton"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTitle" />

    <ImageButton
        android:id="@+id/coffeeImageButton"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:background="@color/imagesBackgroundColor"
        android:onClick="goToCoffeeView"
        android:scaleType="fitCenter"
        android:src="@drawable/coffee1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTitle" />

    <TextView
        android:id="@+id/donutsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Donuts"
        android:textColor="@color/textViewColor"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/coffeeTextView"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donutsImageButton" />

    <TextView
        android:id="@+id/coffeeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:cursorVisible="false"
        android:text="Order Coffee"
        android:textColor="@color/textViewColor"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffeeImageButton" />

    <ImageButton
        android:id="@+id/userOrdersButton"
        android:layout_marginTop="32dp"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/cart"
        android:background="@color/imagesBackgroundColor"
        android:scaleType="fitCenter"
        android:onClick="goToUserOrderView"
        app:layout_constraintEnd_toStartOf="@+id/storeOrdersButton"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donutsTextView" />

    <ImageButton
        android:id="@+id/storeOrdersButton"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/orders2"
        android:background="@color/imagesBackgroundColor"
        android:scaleType="fitCenter"
        android:onClick="goToStoreOrderView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffeeTextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="116dp"
        android:text="My Order"
        android:textAlignment="center"
        android:textColor="@color/textViewColor"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userOrdersButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="68dp"
        android:text="Store Orders"
        android:textAlignment="center"
        android:textColor="@color/textViewColor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeOrdersButton" />

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="211dp"
        android:layout_height="27dp"
        android:layout_marginTop="40dp"
        android:text="Monkey Donuts"
        android:textColor="@color/textViewColor"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>