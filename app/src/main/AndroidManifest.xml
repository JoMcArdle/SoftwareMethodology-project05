<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoftwareMethodologyProject05"
        tools:targetApi="31">
        <activity
            android:name=".StoreOrderActivity"
            android:label="@string/store_order_name"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".UserOrderActivity"
            android:label="@string/user_order_name"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".CoffeeActivity"
            android:label="@string/coffee_name"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".DonutsActivity"
            android:label="@string/donuts_name"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>